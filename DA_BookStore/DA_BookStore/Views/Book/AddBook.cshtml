
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <meta charset="utf-8">
    <link href="@Url.Content("~/Content/detail.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    <title>Thêm điện thoại</title>
</head>
<body>
    <div class="main-screen-2">
        <div class="row">

            <form action="~/Book/AddBook" method="post" enctype="multipart/form-data">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 left-box" style="padding-left:30px;padding-right:30px;">
                    <div class="book-title">
                        <h3>Tên điện thoại</h3>
                        <input id="TenDienThoai" name="TenDienThoai" type="text" style="width:100%;" required />
                        <h3>Màn hình</h3>
                        <input id="ManHinh" name="ManHinh" type="text" style="width:100%;" required />
                        <h3>Camera Sau</h3>
                        <input id="CameraSau" name="CameraSau" type="text" style="width:100%;" />
                        <h3>Camera Trước</h3>
                        <input id="CameraTruoc" name="CameraTruoc" type="text" style="width:100%;" />
                        <h3>Hệ Điều Hành</h3>
                        <select id="hdh" name="hdh" style="width: 200px; height: 30px; color: #33ca93;">
                            <option value="Android">Android</option>
                            <option value="IOS">IOS</option>
                        </select>              
                        <h3>CPU</h3>
                        <input id="CPU" name="CPU" type="text" style="width:100%;" />
                    </div>
                    <hr>
                    <div class="book-price">
                        <h3>Giá bán</h3>
                        <input id="GiaBan" name="GiaBan" type="number" min="10000" style="width:100%;" />
                    </div>
                    <div class="book-count">
                        <h3>Số lượng</h3>
                        <input id="SoLuongTon" name="SoLuongTon" type="number" style="width:100%;" />
                    </div>
                    <div class="the-loai">
                        <h3>Hãng sản xuất </h3>
                        <select id="tl1" name="tl1">
                            <option value="null" selected></option>
                            @foreach (var tl1 in ViewBag.DsTL)
                            {
                                if (tl1.HienTHiTL)
                                {
                                    <option value="@tl1.MaHangSanXuat">@tl1.TenHangSanXuat</option>
                                }
                            }
                        </select>
                    </div>
                    @*<div class="the-loai">
                        <h3>Thể loại 2</h3>
                        <select id="tl2" name="tl2">
                            <option value="null" selected></option>
                            @foreach (var tl in ViewBag.DsTL)
                            {
                                if (tl.HienThiTL)
                                {
                                    <option value="@tl.MaTheLoai">@tl.TenTheLoai</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="the-loai">
                        <h3>Thể loại 3</h3>
                        <select id="tl3" name="tl3">
                            <option value="null" selected></option>
                            @foreach (var tl in ViewBag.DsTL)
                            {
                                if (tl.HienThiTL)
                                {
                                    <option value="@tl.MaTheLoai">@tl.TenTheLoai</option>
                                }
                            }
                        </select>
                    </div>*@

                    <hr>
                    <div class="book-introduce">
                        <h3>Chi tiết điện thoại</h3>
                        <textarea id="GioiThieuDienThoai" name="GioiThieuDienThoai" style="width:100%; min-height:170px !important;"></textarea>
                    </div>
                    <div class="row" style="margin:10px;">
                        <div class="col-md-6">
                            <input type="file" name="HinhDienThoai" id="HinhDienThoai" />
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-danger" style="margin-left: 10px; width:70px;">Thêm</button>
                        </div>
                    </div>
                </div>
            </form>

            

        </div>
    </div>
</body>
</html>
